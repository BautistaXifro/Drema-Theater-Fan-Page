@* Vista Index.cshtml *@
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5 text-white">

    <!-- Bienvenida -->
    <h1 class="text-warning text-center">Bienvenido al Fansite de Dream Theater</h1>
    <p class="lead text-center">Explora la discografía, shows, miembros y más sobre una de las bandas más icónicas del metal progresivo.</p>

    <!-- Noticias recientes -->
    <div class="alert alert-warning mt-4" role="alert">
        ¡Nuevo álbum Parasomnia del 2025! Detalles en la sección de <a href="/Discografia" class="alert-link">Discografía</a>.
    </div>

    <!-- Video destacado -->
    <div class="text-center mt-5">
        <h2 class="text-warning">🎥 Video Destacado</h2>
        <video controls class="mt-3 rounded" width="560" height="315">
            <source src="/video/Dream Theater -  The Spirit Carries On (from Distant Memories - Live in London).mp4" type="video/mp4">
            Tu navegador no soporta la reproducción de video.
        </video>
    </div>

    <!-- Álbum destacado -->
    <div class="card bg-dark text-white mt-5">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="/img/discografia/Scenes_from_a_Memory.jpg" class="img-fluid rounded-start" alt="Scenes from a Memory">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title text-warning">Álbum Destacado: *Metropolis Pt. 2: Scenes from a Memory*</h5>
                    <p class="card-text">Uno de los álbumes más icónicos de Dream Theater, lanzado en 1999, reconocido por su narrativa compleja y virtuosismo musical.</p>
                    <a href="/Discografia" class="btn btn-warning">Ver Discografía Completa</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Encuesta -->
    <div class="mt-5 d-flex justify-content-center align-items-center">
        <div>
            <h2 class="text-warning text-center">📊 ¿Cuál es tu álbum favorito?</h2>
            <form id="encuesta">
                <div class="mb-3">
                    <label for="album" class="form-label">Selecciona tu álbum favorito:</label>
                    <select class="form-select" id="album" name="album">
                        <option value="When Dream and Day Unite">When Dream and Day Unite</option>
                        <option value="Images and Words">Images and Words</option>
                        <option value="Awake">Awake</option>
                        <option value="Scenes from a Memory">Scenes from a Memory</option>
                        <option value="Train of Thought">Train of Thought</option>
                        <option value="Octavarium">Octavarium</option>
                        <option value="Systematic Chaos">Systematic Chaos</option>
                        <option value="Black Clouds & Silver Linings">Black Clouds & Silver Linings</option>
                        <option value="A Dramatic Turn of Events">A Dramatic Turn of Events</option>
                        <option value="Dream Theater">Dream Theater</option>
                        <option value="The Astonishing">The Astonishing</option>
                        <option value="Distance Over Time">Distance Over Time</option>
                        <option value="A View from the Top of the World">A View from the Top of the World</option>
                        <option value="Parasomnia">Parasomnia</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-warning mt-3">Enviar Voto</button>
            </form>
        </div>
    </div>

    <!-- Toast de confirmación -->
    <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <div id="toast" class="toast align-items-center custom-toast" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    ¡Tu voto ha sido enviado!
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>

    <!-- Script para Encuesta con Toast -->
    @section Scripts{
        <script>
            const form = document.getElementById('encuesta');
            const toast = new bootstrap.Toast(document.getElementById('toast'));

            form.addEventListener('submit', function(event) {
                event.preventDefault();
                toast.show();
            });
        </script>
    }


    <!-- Tabla integrantes -->
    <div class="container mt-5 text-white">
        <h2 class="text-warning text-center">Miembros de la Banda</h2>
        <table class="table table-dark table-striped mt-4">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Instrumento</th>
                    <th>Años Activo</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>James LaBrie</td>
                    <td>Voz</td>
                    <td>1991 - Presente</td>
                </tr>
                <tr>
                    <td>John Petrucci</td>
                    <td>Guitarra</td>
                    <td>1985 - Presente</td>
                </tr>
                <tr>
                    <td>John Myung</td>
                    <td>Bajo</td>
                    <td>1985 - Presente</td>
                </tr>
                <tr>
                    <td>Mike Mangini</td>
                    <td>Batería</td>
                    <td>2010 - 2023</td>
                </tr>
                <tr>
                    <td>Mike Portnoy</td>
                    <td>Batería</td>
                    <td>1985 - 2010, 2023 - Presente</td>
                </tr>
                <tr>
                    <td>Jordan Rudess</td>
                    <td>Teclado</td>
                    <td>1999 - Presente</td>
                </tr>
            </tbody>
        </table>
    </div>

    <!-- Redes sociales -->
    <div class="mt-5 text-center">
        <h2 class="text-warning">📱 Redes de la banda</h2>
        <a href="https://www.facebook.com/dreamtheater" class="btn btn-outline-light m-2" target="_blank">Facebook</a>
        <a href="https://www.instagram.com/dreamtheaterofficial/" class="btn btn-outline-light m-2" target="_blank">Instagram</a>
        <a href="https://twitter.com/dreamtheaternet" class="btn btn-outline-light m-2" target="_blank">Twitter</a>
        <a href="https://www.youtube.com/user/dreamtheater" class="btn btn-outline-light m-2" target="_blank">YouTube</a>
    </div>

</div>